{% trans_default_domain 'admin.reference.cars.model' %}


<div class="d-flex justify-content-between align-items-center gap-3">

    <div class="w-50">
        {{ form_row(form.class, { label : 'Класс' }) }}
    </div>

    <div class="w-50">
        {{ form_row(form.brand, {
            label : 'Марка автомобиля',
            placeholder: 'Выберите марку ...',
            attr: { 'data-select' : 'select2' } }) }}

    </div>
</div>

<hr>

<div class="d-flex justify-content-between align-items-center gap-3">

    <div class="w-50">
        {{ include(_self|replace({ "form.html.twig": "_image.html.twig" })) }}
    </div>

    <div class="w-50">
        {{ include(_self|replace({ "form.html.twig": "_trans.html.twig" })) }}

        {{ form_row(form.info.url, { label : 'Семантическая ссылка' }) }}
    </div>
</div>

<div class="d-flex justify-content-between align-items-center gap-3">
    <div class="w-50"> {{ form_row(form.code, { label : 'Код модели' }) }}</div>
    <div class="w-50">

        <div class="mb-3">
            <label for="cars_model_form_from" class="form-label required">Выпуск модели</label>
            <div class="d-flex justify-content-between align-items-center gap-3">

                {{ form_widget(form.from, { label : false }) }} - {{ form_widget(form.to, { label : false }) }}
            </div>
        </div>

    </div>
</div>
